<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="/static/logo/logo.png">
    <link rel="stylesheet" href="/static/styles/signup.css">
</head>

<body>
    {% include "components/navbar.html.jinja" %}

    <div class="card rounded">
        <div class="card-body">
            <h3 class="card-title text-center textLapis">Create Your Account</h3>
            <p class="text-center text-muted">Your privacy is our priority. We will never sell or leak your data.</p>
            <hr>

            {% for message in get_flashed_messages() %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
            {% endfor %}

            <form action="/signup" method="post">
                <div class="mb-3">
                    <label for="first_name" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="first_name" name="first_name" placeholder="John"
                        required value="{{ request.form.get('first_name', '') }}">
                </div>

                <div class="mb-3">
                    <label for="last_name" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Doe" required
                        value="{{ request.form.get('last_name', '') }}">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="proquipment@gmail.com"
                        required value="{{ request.form.get('email', '') }}">
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label">Home Address</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="123 Main St"
                        required value="{{ request.form.get('address', '') }}">
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="thisdingus123"
                        required value="{{ request.form.get('username', '') }}">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password"
                        placeholder="A strong password" required>
                </div>

                <div class="mb-3">
                    <label for="confirm_password" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirm_password" name="confirm_password"
                        placeholder="Retype your password" required>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-custom btn-lg">Sign Up</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <p>Already have an account? <a class="link-custom" href="/signin">Sign In</a></p>
    </div>

    <footer class="text-center mt-4 text-muted">
        <p>Never share your password or personal information with anyone else. Your data will only be used to process
            orders and contact you.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>