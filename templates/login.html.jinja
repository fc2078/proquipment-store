<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Log In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles.css">
</head>

<body>
    {% include "components/navbar.html.jinja" %}

    <div class="card rounded mx-auto container" id="logInCardSize">
        <div class="card-body">
            <div class="mb-5" id="logInTextSize">
                <h3 class="card-title mt-2 text-center textLapis">Log In</h3>
            </div>
            <hr>

            {%for message in get_flashed_messages()%}
            <div class="alert alert-danger" role="alert">
                {{message}}
            </div>
            {%endfor%}

            <form action="/login" method="post">
                <h5 class="card-title text-left ml-2 textLapis">Userame:</h5>
                <input type="text" class="form-control" name="userVer" placeholder="Username" required>
                <br>
                <h5 class="card-title text-left ml-2 textLapis">Enter Password:</h5>
                <input type="password" class="form-control" name="passVer" placeholder="Password" required>
                <br>
                <div class="d-grid gap-2 col-10 mx-auto">
                    <input class="btn btn-success btn-lg" type="submit" value="Log In" name="check">
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <p>Don't have an account?</p>
        <a class="link textLapis" href="/signup">Sign Up</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>