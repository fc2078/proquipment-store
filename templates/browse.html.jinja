<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Browse Proquipment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles/browse.css">
    <link rel="icon" type="image/x-icon" href="/static/logo/logo.png">
</head>

<body>
    {% include "components/navbar.html.jinja" %}

    <div class="container my-5">
        <h1 class="text-center mb-4">Browse the Proquipment Store</h1>

        <!-- Search Form -->
        <form class="mb-4" action="/browse">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search products..."
                    aria-label="Search">
                <button class="btn btn-custom" type="submit">Search</button>
            </div>
        </form>

        <!-- Products Grid -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            {% for item in products %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ item['image'] }}" class="card-img-top" alt="{{ item['name'] }}">
                    <div class="card-body d-flex flex-column" style="background-color: #05668D; color: #F0F8FF;">
                        <h5 class="card-title">{{ item["name"] }}</h5>
                        <p class="card-text mb-3">$ {{ "%.2f" | format(item["price"]) }}</p>
                        <a href="/product/{{ item['id'] }}" class="btn btn-custom mt-auto">View Item</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>