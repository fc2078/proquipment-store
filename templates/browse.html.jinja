<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Technoflare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles.css">
</head>

<body>
    {% include "components/navbar.html.jinja" %}
    <h1>Browse Page</h1>

    {# Form for searching #}
    <form class="container" action="/browse">
        <div class="input-group mb-3">
            <input type="text" name="query" class="form-control" placeholder="Search" aria-label="Search">
            <button class="btn bg-success" type="submit" style="color: #FFFFFF;">Search</button>
        </div>
    </form>

    <div class="container row g-4 mx-auto">
        {%for item in products%}
        <div class="col-md-6 col-lg-4 col-12">
            <div class="card">
                <img src="{{item['image']}}" class="card-img-top" alt="{{item['name']}}">
                <div class="card-body" style="background-color: #05668D; color: #F0F8FF">
                    <h5 class="card-title">{{item["name"]}}</h5>
                    <p class="card-text">${{"%.2f" | format(item["price"])}}</p>
                    <a href="/product/{{item['id']}}" class="btn stretched-link"
                        style="background-color: Teal; color:#FFFFFF">View Item</a>
                </div>
            </div>
        </div>
        {%endfor%}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>